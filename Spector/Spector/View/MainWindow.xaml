<Window x:Class="Spector.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:viewModel="clr-namespace:Spector.ViewModel"
        xmlns:view="clr-namespace:Spector.View"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Background="White"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Specter" Height="1024" Width="1600"
        d:DataContext="{d:DesignInstance {x:Type viewModel:MainWindowViewModel}, IsDesignTimeCreatable=True}"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>

        <view:DeviceList Grid.Row="0"/>

        <view:AudioInterfaceChart Grid.Row="1"
                                  AudioInterface="{Binding AudioInterface}"/>
    </Grid>
</Window>
